<?xml version="1.0" encoding="UTF-8"?>
<!--
14-08-2025 Matrix Theme V2 by andrewpayne68 https://gist.github.com/andrewpayne68/
-->

<style-scheme id="matrix-black" name="Matrix Black" kind="dark">
	<_description>A dark theme for Gedit</_description>

	<!-- Matrix colors -->
	<color name="background" value="#000000"/>
	<color name="current-line" value="#01230a"/>
	<color name="selection" value="#50fa7b"/>
	<color name="foreground" value="#f8f8f2"/>
	<color name="comment" value="#5c7e5f"/>
	<color name="green" value="#00ff00"/>	
	<color name="black" value="#000000"/>

	<!-- Helper colors -->
	<color name="white" value="#ffffff"/>
	<color name="bone-white" value="#f8f8f0"/>
	<color name="weird-gray" value="#909194"/>
	<color name="dark-green" value="#04b832"/>
	<color name="light-green" value="#affdc3"/>

	<style name="text" foreground="dark-green" background="background"/>
	<style name="selection" foreground="dark-green" background="selection"/>
	<style name="cursor" foreground="white" background="white"/>
	<style name="current-line" foreground="current-line" background="current-line"/>
	<style name="line-numbers" foreground="green" background="background"/>
	<style name="bracket-match" foreground="green" background="background" bold="true"/>
	<style name="search-match" foreground="dark-green" background="green" bold="true"/>
        <style name="background-pattern" background="#2f313e"/>

	<style name="def:function" foreground="green"/>
	<style name="def:identifier" foreground="dark-green"/>
	<style name="def:keyword" foreground="dark-green"/>
	<style name="def:number" foreground="dark-green" />
	<style name="def:boolean" foreground="dark-green"/>
	<style name="def:string" foreground="green"/>
	<style name="def:special-char" foreground="dark-green"/>
	<style name="def:builtin" foreground="light-green"/>
	<style name="def:type" foreground="green"/>
	<style name="def:preprocessor" foreground="green"/>
	<style name="def:comment" foreground="comment"/>

	<!-- Python-specific stuff -->
	<style name="python:module-handler" foreground="dark-green"/>
	<style name="python:function-name" foreground="green"/>
	<style name="python:decorator" foreground="green"/>
	<style name="python:class-name" foreground="white"/>
	<style name="python:special-variable" foreground="light-green"/>
	<style name="python:builtin-constant" foreground="dark-green"/>

	<style name="def:specials" foreground="#f8f8f2"/>
	<style name="def:statement" foreground="dark-green"/>

	<style background="#468410" bold="true" foreground="#f8f8f2" name="diff:added-line"/>
	<style foreground="#8b080b" name="diff:removed-line"/>
	<style background="#243a5f" foreground="#f8f8f2" name="diff:changed-line"/>

        <!-- Markup -->
        <style name="def:emphasis"                italic="true"/>
        <style name="def:strong-emphasis"         foreground="dark-green" bold="true"/>
        <style name="def:inline-code"             foreground="light-green"/>
        <style name="def:insertion"               underline="single"/>
        <style name="def:deletion"                foreground="red" strikethrough="true"/>
        <style name="def:link-text"               foreground="orange"/>
        <style name="def:link-symbol"             foreground="green" bold="true"/>
        <style name="def:link-destination"        foreground="green" italic="true" underline="single"/>
        <style name="def:heading"                 foreground="green" bold="true"/>
        <style name="def:thematic-break"          foreground="green" bold="true"/>
        <style name="def:preformatted-section"    foreground="green"/>
        <style name="def:list-marker"             foreground="dark-green" bold="true"/>

</style-scheme>
